<?php

namespace Cultura\APP\DAO;

use Cultura\APP\Model\Contrato;

class ContratoDAO extends DAO{

     public function __construct()
    {
        parent::__construct();
    }

    public function save (Contrato $model) : Contrato
    {
        return ($model->idcontrato == null) ? $this-> insert($model) : $this->update($model);
    }

    public function insert (Contrato $model) :Contrato
    {
         $sql = "INSERT INTO contrato (
                                datainicio,
                                datatermino,
                                diavencimento,
                                id_modalidade),                                 
                                values (?,?,?,?)";
                                
        $stmt = parent :: $conexao ->prepare($sql);
        $stmt->bindValue(1,$model->datainicio);
        $stmt->bindValue(3,$model->datatermino);
        $stmt->bindValue(4,$model->diavencimento);
        $stmt->bindValue(5,$model->id_modadlidade);
        $stmt->execute();

        return new Contrato();
    }

    public function update (Contrato $model) :Contrato
    {
        return new Contrato();
    }

    public function selectById (int $id) :?Contrato
    {
         return new Contrato();
    }

        public function select () : array
    {
        return [];
    }

        public function delete (int $id) : bool
    {
        return false;
    }



}
